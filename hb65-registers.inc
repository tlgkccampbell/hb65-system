SYSTEM_VIA_SR        := SYSTEM_VIA_REGISTERS + $0A   ; SR
SYSTEM_VIA_ACR       := SYSTEM_VIA_REGISTERS + $0B   ; ACR
SYSTEM_VIA_PCR       := SYSTEM_VIA_REGISTERS + $0C   ; PCR
