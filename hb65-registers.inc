SYSTEM_VIA_T1CL      := SYSTEM_VIA_REGISTERS + $04   ; T1CL
SYSTEM_VIA_T1CH      := SYSTEM_VIA_REGISTERS + $05   ; T1CH
SYSTEM_VIA_T1LL      := SYSTEM_VIA_REGISTERS + $06   ; T1LL
